
<%= form_with scope: :kitten, url: yield(:url), method: yield(:method), local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br/>
  <%= f.label :age %>
  <%= f.number_field :age %>
  <br/>
  <%= f.label :cuteness %>
  <%= f.number_field :cuteness, in: 1.0..10.0, step: 0.5 %>
  <br/>
  <%= f.label :softness %>
  <%= f.number_field :softness, in: 1.0..10.0, step: 0.5 %>
  <br/>
  <%= f.submit yield(:button_text) %>
<% end %>